 <EventFile Repeat="Year">
	<Variable Name="DayNumber" Select="86400"/>
	
	<!-- Built in Holidays. Add Inactive="true" to disable. -->


	<!-- Normal Holidays -->

	<Set Month="1">
		<Event Day="1">Año nuevo</Event>
	</Set>

	<Set Month="2">
	</Set>

	<Set Month="3">
	</Set>

	<Set Month="4">
		<Event Day="{$FirstFri}">Viernes santo</Event>
		<Event Day="{$FirstSat}">Sábado santo</Event>
	</Set>

	<Set Month="5">
		<Event Day="1">Día del trabajador</Event>
		<Event Day="21">Día de las glorias navales</Event>
	</Set>

	<Set Month="6">
		<Event Day="28">San Pedro y San Pablo</Event>
	</Set>

	<Event Month="7" Day="16">Día de la virgen del Carmen</Event>

	<Event Month="8" Day="15">Asunción de la virgen</Event>

	<Set Month="9">
		<Event Day="17">Fiestas patrias</Event>
		<Event Day="18">Primera junta nacional de gobierno</Event>
		<Event Day="19">Día de las glorias del ejército</Event>
	</Set>

	<Set Month="10">
		<Event Day="11">Día de la raza</Event>
		<Event Day="31">Día de las iglesias evangélicas y protestantes</Event>
	</Set>

	<Set Month="11">
		<Event Day="1">Día de todos los santos</Event>
	</Set>

	<Set Month="12">
		<Event Day="8">Inmaculada Concepción</Event>
		<Event Day="25">Navidad</Event>
	</Set>
</EventFile>